{{ define "create_note_form.tmpl" }}
<!DOCTYPE html>
<html lang="en">
    <body id="page-top">
        <head>
            <meta charset="utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
            <meta name="description" content="" />
            <meta name="author" content="" />
            <title> {{ .title }} </title>
            <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
            <!-- Core theme CSS (includes Bootstrap)-->
            <link href="/../css/styles.css" rel="stylesheet" />
        </head>
        {{ template "header.tmpl" .}}
        <!-- Header-->
        <header class="bg-primary bg-gradient text-white">
            <div class="container px-4 text-center">
                <h1 class="fw-bolder">{{ .title }}</h1>
            </div>
        </header>
        <!-- About section-->
        <section id="about">
            <div class="container px-4">
                <div class="row gx-4 justify-content-center">
                    <div class="col-lg-8">
                        <h2>Заметка</h2>
                            <form id="reg-form">
                                <div class="form-group">
                                    <label for="name">Имя</label>
                                    <input name="name" id="name" type="text" class="form-control" required/>
                                </div>
                                <div class="form-group">
                                    <label for="text">Текст заметки</label>
                                    <input name="text" id="text" type="text" class="form-control" required/>
                                </div>
                                <input name= "btn" type="submit" class="btn btn-lg btn-primary" class="form-control" value="Создать" />
                            </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer-->
        {{ template "footer.tmpl" .}}
        <script src="/../js/scripts.js"></script>
        <script type="text/javascript">
            var form = document.getElementById('reg-form');
            var submitter = document.querySelector("button[value=btn]");
            form.onsubmit = function(event){
                var xhr = new XMLHttpRequest();
                var data = new FormData(form);
                xhr.open('POST','/notes/')
                xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
                var json = JSON.stringify(Object.fromEntries(data));
                xhr.send(json);

                xhr.onreadystatechange = function() {
                    if (xhr.readyState == XMLHttpRequest.DONE) {
                        const status = xhr.status;
                        if (status === 0 || (status >= 200 && status < 400)) {
                            // window.history.back(); Location.reload ();
                            window.location.replace('/notes/');
                            // TODO Добавить редирект на форму входа
                            // form.reset(); //reset form after AJAX success.
                        } else {
                            alert(JSON.parse(xhr.responseText).error);
                        }
                    }
                }
                //Dont submit the form.
                return false; 
            }
        </script>
    </body>
</html>
{{ end }}